<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project Arise">
    
    
	<target name="create_run_jar">
		<tstamp>
			<format property="DATE" pattern="dd.MM.yyyy HH:mm:ss" />
		</tstamp>

		<jar destfile="Arise.jar"
			filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Main-Class" value="de.dakror.arise.Arise" />
				<attribute name="Class-Path" value="." />
				<attribute name="Application-Name" value="Arise" />
				<attribute name="Build-Date" value="${DATE}" />
			</manifest>
			<fileset dir="bin">
				<exclude name="**/*.applet" />
			</fileset>
			<zipfileset excludes="META-INF/*.SF"
				src="libs/GameSetup.jar" />
			<zipfileset excludes="META-INF/*.SF"
				src="libs/JSON.jar" />
		</jar>

		<signjar jar="Arise.jar"
			keystore="ariseKeystore" alias="arise" storepass="ariseKeystore" />
	</target>
</project>
